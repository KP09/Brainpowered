<div class="page-backgroud">
  <div class="container">
    <!-- Left section of the dashboard -->
    <div class="col-lg-9 padding-none">
      <!-- Welcome user section -->
      <div class="welcome-section">
        <div class="col-lg-3 padding-none">
          <div class="user-dash-image">
            <%= cl_image_tag (@user.get_profile_picture) %>
          </div>
        </div>
        <div class="col-lg-9 margin-top">
          <h1>Hello James</h1>
          <p>Welcome to your dashboard</p>
        </div>
      </div>
      <div class="right-main">
        <div class="tabs" style="justify-content: center;">
        <a class="tab tab-fix-width active" role="tab" data-toggle="tab" data-target="#projects" aria-controls="projects">
          <h3>Open projects</h3>
        </a>
        <a class="tab tab-fix-width" role="tab" data-toggle="tab" data-target="#closed" aria-controls="closed">
          <h3>Closed Projects</h3>
        </a>
        <a class="tab tab-fix-width" role="tab" data-toggle="tab" data-target="#contributions" aria-controls="contributions">
          <h3>Contributions</h3>
        </a>
        <a class="tab tab-fix-width" role="tab" data-toggle="tab" data-target="#questions" aria-controls="questions">
          <h3>Questions</h3>
        </a>
      </div>

      <!-- Project Tab -->
      <div class="container margin-top">
        <div id="projects" class="tab-content fade in">
          <p style="font-weight: 100;">Open Projects</p>
          <% @participations.each do |participation| %>
            <%= render "participations", participation: participation %>
          <% end %>
        </div>
        <!-- Company Tabs -->
        <div id="closed" class="tab-content fade">
          <p style="font-weight: 100;">Closed Projects</p>
          <% if current_user.closed_participations %>
            <% current_user.closed_participations.each do |participation| %>
              <%= render "closed-projects", project: participation.project %>
              <% end %>
          <% else %>
              <p = style="font-size: 12px;">No closed participations</p>
          <% end %>
          <hr>
        </div>
        <!-- Profile Tabs -->
        <div id="contributions" class="tab-content fade">
          <p style="font-weight: 100;">User Contributions</p>
          <% @participations.each do |participation| %>
            <%= render "participations", participation: participation %>
          <% end %>
        </div>
        <!-- Closed Projects -->
        <div id="questions" class="tab-content fade">
          <p style="font-weight: 100;">User Questions</p>
        </div>
      </div>
      </div>
    </div>

    <!-- Right hand section of the dashboard -->
    <div class="col-lg-3 padding-none">
      <div class="right-dashboard">
        <h2 class="text-center" style="font-size: 20px;"><i class="fa fa-dashboard"></i> Portfolio stats</h2>
          <hr>
          <!-- Briefcase -->
          <div class="stat">
           <%= image_tag 'briefcase.svg', class: "profile-icon" %>
           <% if @user.active_participations %>
             <span>
               <strong><%= @user.count_participations %></strong>
               <%= "Contribution".pluralize(@user.count_participations) %>
               in progress
             </span>
           <% else %>
             <span>No work in progress</span>
           <% end %>
          </div>
          <!-- Contributions -->
          <div class="stat">
           <%= image_tag 'contribution.svg', class: "profile-icon" %>
           <% if @user.closed_contributions %>
             <span>
               <strong><%= @user.count_contributions %></strong>
               <%= "Contribution".pluralize(@user.count_contributions) %>
               made
             </span>
           <% else %>
             <span>No contributions yet</span>
           <% end %>
          </div>
          <!-- Stars -->
          <div class="stat">
           <%= image_tag 'star.svg', class: "profile-icon" %>
           <% if @user.count_starred_contributions >= 1 %>
             <span>
               <strong><%= @user.count_starred_contributions %></strong>
               <%= "Star".pluralize(@user.count_starred_contributions) %>
             </span>
           <% else %>
             <span>No stars yet</span>
           <% end %>
          </div>
          <!-- Upvotes -->
          <div class="stat">
           <%= image_tag 'upvote.svg', class: "profile-icon" %>
           <% if @user.count_upvotes >= 1 %>
             <span>
               <strong><%= @user.count_upvotes %></strong>
               <%= "Upvote".pluralize(@user.count_upvotes) %>
             </span>
           <% else %>
             <span>No upvotes yet</span>
           <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
