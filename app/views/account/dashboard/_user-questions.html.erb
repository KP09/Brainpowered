<div class="project-row flex-between">
    <div>
      <p class="question-col"><%= question.question[0..25] %>...</p>
    </div>
    <div class="project-col">
      <p><%= question.project.title %></p>
    </div>
    <div>
      <p class="answer-col"><% if question.answer? == true %>
        Anwered
      <% else %>
        Awaiting answer
      <% end %>
      </p>
    </div>
    <div>
      <p><%= link_to "Open", project_path(question.project), class: "btn btn-primary padding-none full-width-button" %></p>
    </div>
</div>
