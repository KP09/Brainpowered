<div class="project-row flex-between">
    <div>
      <% if participation.project.title.length >= 30 %>
        <p><%= participation.project.title[0..30] %>...</p>
      <% else %>
        <p><%= participation.project.title %></p>
      <% end %>
    </div>
    <div>
      <p><%= participation.project.user.company_name %></p>
    </div>
    <div>
      <p>Closed</p>
    </div>
    <div>
      <p><%= link_to "View Project", project_path(participation.project), class: "btn btn-default padding-none full-width-button" %></p>
    </div>
</div>
