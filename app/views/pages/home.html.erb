<div id="homepage-main-banner" style="background-image: linear-gradient(90deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.5 ) 80%), url('<%= cl_image_path ('homepage_v1') %>')">
  <%= render 'shared/navbar_transparent' %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 homepage-banner-content">
        <div class="text-center">
          <h1>Work speaks louder than words</h1>
          <h2>Build your portfolio by contributing to real projects, for real companies</h2>
          <br>
          <p>
            <%= link_to "Start discovering", search_path, class: "btn btn-primary" %>
              or
            <a href="#how" class="btn btn-default">Learn more</a>
          </p>

        </div>
      </div>
      <div class="col-xs-12 col-md-4 homepage-banner-content">
        <div id="homepage-form-box">
          <div class="tabs">
            <a class="tab active" role="tab" data-toggle="tab" data-target="#person-sign-up" aria-controls="person-sign-up">
              <h3>I'm a person</h3>
            </a>
            <a class="tab" role="tab" data-toggle="tab" data-target="#company-sign-up">
              <h3>We're a company</h3>
            </a>
          </div>
          <div>
            <div class="tab-content margin-top" id="person-sign-up">
              <%= render 'users/person_sign_up' %>
            </div>
            <div class="tab-content margin-top hidden" id="company-sign-up">
              <%= render 'users/company_sign_up' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<a name="how"></a>
