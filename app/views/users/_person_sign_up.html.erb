<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: 'Your first name' %>
    <%= f.input :last_name, required: true, label: false, placeholder: 'Your last name' %>
    <%= f.input :email, required: true, label: false, placeholder: 'Your email address' %>
    <%= f.input :password, required: true, label: false, placeholder: 'Set a password (minimum 6 characters)' %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
