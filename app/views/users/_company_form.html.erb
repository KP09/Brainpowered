<div class="alignment body-text font form_placement">
  <%= simple_form_for(user) do |f| %>
    <div class="margin"></div>
    <%= f.input :email %>
    <%= f.input :company_name %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :profile_picture, as: :attachinary %>
    <%= f.input :cover_photo, as: :attachinary %>
    <div class="text-center">
      <%= f.submit value: "Save", class: "btn btn-primary", id: "margin-bot" %>
    </div>
  <% end %>
</div>
