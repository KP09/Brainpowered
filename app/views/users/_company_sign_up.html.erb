<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name, required: true, autofocus: true, label: false, placeholder: 'Your company name' %>
    <%= f.hidden_field :company, value: true, label: false, placeholder: '' %>
    <%= f.input :email, required: true, label: false, placeholder: 'Your company email address' %>
    <%= f.input :password, required: true, label: false, placeholder: 'Set a password (min 6 characters)' %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm your password' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "homepage-form-button" %>
  </div>
<% end %>
