<div class="form-background">
  <div class="container">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 shadow-box margin-top">
        <% if current_user.is_individual? %>
          <h2 class="text-center">Hello <%= current_user.first_name %> <%= current_user.last_name %>, Tell us more about yourself</h2>
        <% else %>
           <h2 class="text-center">Hello <%= current_user.company_name %>, Please fill out any missing information below!</h2>
        <% end %>
      <div class="render">
        <% if current_user.is_individual? %>
          <%= render 'users/individual_form' %>
        <% else %>
          <%= render 'users/company_form' %>
        <% end %>
      </div>
      <div class="skip text-right">
        <%= link_to "Skip", account_dashboard_index_path %>
      </div>
    </div>
  </div>
</div>
